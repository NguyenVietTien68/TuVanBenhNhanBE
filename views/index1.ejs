  <div class="form_tuvan container">
    <div class="d-flex">
      <p class="heading2 text-danger">Gửi thông tin để được tư vấn</p>
      <span class="note_tv">Vui lòng nói gửi các chịu chứng và các bệnh bạn đang gặp phải</span>
    </div>

    <form class="needs-validation row ">
      <div class="col-6">
        <div class="form-group was-validated">
          <label class="form-label" for="name">Họ tên</label>
          <input class="form-control" type="text" id="name" required>
          <div class="invalid-feedback">
            Vui lòng nhập họ tên.
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="sdt">Số điện thoại</label>
          <input class="form-control" type="number" id="sdt" required>
          <div class="invalid-feedback">
            Vui lòng nhập số điện thoại.
          </div>
        </div>
        <div class="form-group was-validated">
          <label class="form-label" for="email">Email </label>
          <input class="form-control" type="email" id="email" required>
          <div class="invalid-feedback">
            Vui lòng nhập email hoặc số điện thoại.
          </div>
        </div>
        <label class="form-label" for="email">Giới tính </label>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gioitinh" id="flexRadioDefault1">
          <label class="form-check-label" for="flexRadioDefault1">
            Nam
          </label>
        </div>
        <div class="form-check">
          <input class="form-check-input" type="radio" name="gioitinh" id="flexRadioDefault2" checked>
          <label class="form-check-label" for="flexRadioDefault2">
            Nữ
          </label>
        </div>

      </div>

      <div class="col-6">

        <div class="form-group was-validated">
          <label class="form-label" for="age">Tuổi </label>
          <input class="form-control" type="date" id="age" required>
          <div class="invalid-feedback">
            Vui lòng nhập tuổi.
          </div>
        </div>

        <div class="form-group was-validated">
          <label class="form-label" for="address">Địa chỉ </label>
          <input class="form-control" type="text" id="address" required>
          <div class="invalid-feedback">
            Vui lòng nhập địa chỉ.
          </div>
        </div>
        <div class="form-floating mt-4">
          <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
            style="height: 150px"></textarea>
          <label for="floatingTextarea2">Mô tả chịu chứng, các tiền sử bệnh, ....</label>
        </div>
      </div>


      <div class="text-center">
        <button class="btn btn-success mt-4 px-5">Gửi thông tin</button>
      </div>



    </form>





  </div>
  <!-- Chatbox -->
  <div class="chatbox" style="margin: 20px 300px;">
    <input type="checkbox" id="show">
    <label for="show" class="show-btn">
      <i class="fab fa-facebook-messenger"></i>
    </label>
    <div class="wrapper_chat container">
      <h5 class="text-success">Nhắn tin tư vấn trực tiếp</h5>
   
      <form class="needs-validation  ">

        <div class="form-group was-validated">
          <label class="form-label" for="name">Họ tên</label>
          <input class="form-control" type="text" id="name" required>
          <div class="invalid-feedback">
            Vui lòng nhập họ tên, email, số điện thoại.
          </div>
        </div>
        <div class="form-floating mt-4">
          <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2"
            style="height: 150px"></textarea>
          <label for="floatingTextarea2">Mô tả chịu chứng, các tiền sử bệnh, ....</label>
        </div>

    </div>





    </form>



